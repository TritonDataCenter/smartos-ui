#!/bin/bash

root="$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)/../data"
case "$1" in
    list)
        cat "$root/vmadm/list.txt";;
    get)
        cat "$root/vmadm/$2.json";;
    create)
        sleep 15 # this often takes a while...
        cat - > "$root/vmadm/create_output.txt";;
    *)
        echo "$1 not implemented"
        exit 1;;
esac
