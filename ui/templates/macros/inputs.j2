{% macro text_view(label, value) %}
<div class="sm:col-span-4">
  <label for="prop-{{label|lower}}" class="block text-sm font-medium leading-6 text-white">{{label}}</label>
  <div class="mt-2">
    <div class="flex rounded-md bg-white/5 ring-1 ring-inset ring-white/10 focus-within:ring-2 focus-within:ring-inset focus-within:ring-blue-500">
      <input type="text" name="{{label|lower}}" id="prop-{{label|lower}}" class="flex-1 border-0 bg-transparent py-1.5 pl-1 text-white focus:ring-0 sm:text-sm sm:leading-6 pl-3" value="{{value}}" readonly>
    </div>
  </div>
</div>
{% endmacro %}

{% macro bool_view(label, id, checked, desc) %}
<div class="sm:col-span-6">
  <div class="relative flex gap-x-3">
    <div class="flex h-6 items-center">
      <input
        id="{{id}}"
        name="{{id}}"
        type="checkbox" class="h-4 w-4 rounded border-white/10 bg-white/5 text-blue-600 focus:ring-blue-600 focus:ring-offset-gray-900"
        {% if checked %}checked{% endif %} disabled>
    </div>
    <div class="text-sm leading-6">
      <label for="{{id}}" class="font-medium text-white">{{label}}</label>
      <p class="text-gray-400">{{desc}}</p>
    </div>
  </div>
</div>
{% endmacro %}

{% macro link(label, href) %}
<div class="sm:col-span-4">
  <label for="prop-{{label|lower}}" class="block text-sm font-medium leading-6 text-white">{{label}}</label>
  <div class="mt-2">
    <div class="flex">
      <a
        class="underline decoration-solid text-blue-600 hover:text-blue-500"
        href="{{href}}">{{href}}
      </a>
    </div>
  </div>
</div>
{% endmacro %}

{% macro link_new_tab(label, href) %}
<div class="sm:col-span-4">
  <label for="prop-{{label|lower}}" class="block text-sm font-medium leading-6 text-white">{{label}}</label>
  <div class="mt-2">
    <div class="flex">
      <a
        class="underline decoration-solid text-blue-600 hover:text-blue-500"
        target="_blank"
        href="{{href}}">{{href}}
      </a>
    </div>
  </div>
</div>
{% endmacro %}

{% macro textarea_view(label, text) %}
<div class="sm:col-span-4">
  <label for="prop-{{label|lower}}" class="block text-sm font-medium leading-6 text-white">{{label}}</label>
  <div class="mt-2">
    <textarea
      id="prop-{{label|lower}}"
      name="prop-{{label|lower}}"
      rows="3"
      class="text-white block w-full rounded-md border-0 bg-white/5 py-1.5 shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-blue-500 sm:text-sm sm:leading-6" readonly>{{text}}</textarea>
  </div>
</div>
{% endmacro %}