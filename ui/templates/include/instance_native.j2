{%- import "macros/inputs.j2" as input -%}
<div class="mx-auto px-8">
  <div class="space-y-12">
    <div class="pb-12">
      <h2 class="text-base font-semibold leading-7 text-white">Native Zone Properties</h2>
      <p class="mt-1 text-sm leading-6 text-gray-600">
        Instance properties specific to a native zone.
      </p>

      <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <label for="prop-image-uuid" class="block text-sm font-medium leading-6 text-white">Image</label>
          <div class="mt-2">
            <div class="flex">
              <a
                class="underline decoration-solid text-blue-600 hover:text-blue-500"
                href="/images/{{self.image.manifest.uuid}}"
                {% if let Some(description) = self.image.manifest.description %}
                  title="{{description}}"
                {% endif %}>
                {{self.image.manifest.name}}@{{self.image.manifest.version}} ({{self.image.manifest.uuid}})
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>