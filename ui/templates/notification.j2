{%- import "macros/icons.j2" as icons -%}
<div id="notification-{{id}}"
  {% match timeout %}
    {% when Some with (interval) %}
      data-hx-ext="remove-me"
      data-remove-me="{{interval}}"
    {% when None %}
  {% endmatch %}
  class="notification pointer-events-none z-[99] fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6">
  <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
    <div class="border border-slate-700 pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-slate-800 shadow-lg ring-1 ring-black ring-opacity-5">
      <div class="p-4">
        <div class="flex items-start">
          <div id="notification-icons" class="flex-shrink-0">
            {% match kind %}
              {% when NotificationKind::Ok %}
                {% call icons::ok("h-6 w-6 text-green-400") %}
              {% when NotificationKind::Error %}
                {% call icons::error("h-6 w-6 text-red-400") %}
            {% endmatch %}
          </div>
          <div class="ml-3 w-0 flex-1 pt-0.5">
            <p id="notification-body" class="text-sm font-medium text-white">
              {{ subject }}
            </p>
            <p id="notification-heading" class="mt-1 text-sm text-slate-500">
              {{ message }}
            </p>
          </div>
          <div class="ml-4 flex flex-shrink-0">
            <button type="button" data-target="#notification-{{id}}" class="notification-close cursor-pointer inline-flex rounded-md bg-slate-600 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
              <svg data-target="#notification-{{id}}" class="notification-close h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>