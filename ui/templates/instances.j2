{% extends "layout/authed.j2" %}
{% block title %}{{title}}{% endblock %}
{% block content %}
<div id="content" class="px-6">
  <header>
    <div class="grid grid-cols-1 bg-gray-700/10 sm:grid-cols-2 lg:grid-cols-4">
      <div class="border-t border-white/5 py-6 px-4 sm:px-6 lg:px-8">
        <p class="text-sm font-medium leading-6 text-gray-400">VMs</p>
        <p class="mt-2 flex items-baseline gap-x-2">
          <span class="text-4xl font-semibold tracking-tight text-white">{{instances.len()}}</span>
        </p>
      </div>
      <div class="border-t border-white/5 py-6 px-4 sm:px-6 lg:px-8 sm:border-l">
        <p class="text-sm font-medium leading-6 text-gray-400">Provisioned Memory</p>
        <p class="mt-2 flex items-baseline gap-x-2">
          <span class="text-4xl font-semibold tracking-tight text-white">{{total_ram}}</span>
          <span class="text-sm text-gray-400">MiB</span>
        </p>
      </div>
      <div class="border-t border-white/5 py-6 px-4 sm:px-6 lg:px-8 lg:border-l">
        <p class="text-sm font-medium leading-6 text-gray-400">Provisioned Quota</p>
        <p class="mt-2 flex items-baseline gap-x-2">
          <span class="text-4xl font-semibold tracking-tight text-white">{{total_quota}}</span>
          <span class="text-sm text-gray-400">GiB</span>
        </p>
      </div>
    </div>
  </header>

    <div class="flex flex-1 items-center justify-end gap-x-6 mb-10 my-10">
      <a href="/provision" hx-get="/provision" hx-target="#main" hx-select="#content" title="Create new VM" class="cursor-pointer rounded-md bg-blue-600 px-3 py-2 text-sm font-semibold shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
          {%  include "include/svg/plus-circle.svg" %}
      </a>
    </div>

  <div class="border-t border-white/10 pt-11">
    <h2 class="px-4 text-base font-semibold leading-7 text-white sm:px-6 lg:px-8">Instances</h2>
    <table class="mt-6 w-full whitespace-nowrap text-left">
      <colgroup>
        <col class="w-full sm:w-4/12">
        <col class="lg:w-1/12">
        <col class="lg:w-4/12">
        <col class="lg:w-2/12">
        <col class="lg:w-2/12">
      </colgroup>
      <thead class="border-b border-white/10 text-sm leading-6 text-white">
        <tr>
          <th scope="col" class="py-2 pl-4 pr-8 font-semibold sm:pl-6 lg:pl-8">Alias</th>
          <th scope="col" class="hidden py-2 pl-0 pr-4 text-right font-semibold sm:table-cell sm:pr-6 lg:pr-8">Brand</th>
          <th scope="col" class="hidden py-2 pl-0 pr-8 font-semibold sm:table-cell">Image</th>
          <th scope="col" class="hidden py-2 pl-0 pr-8 font-semibold md:table-cell lg:pr-20">RAM</th>
          <th scope="col" class="hidden py-2 pl-0 pr-8 font-semibold md:table-cell lg:pr-20">Quota</th>
          <th scope="col" class="py-2 pl-0 pr-4 text-right font-semibold sm:pr-8 sm:text-left lg:pr-20">Status</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-white/5">
        {% for instance in instances %}
        <tr hx-get="/instances/{{instance.uuid}}" hx-target="#main" hx-select="#content" class="hover:bg-gray-800 cursor-pointer">
          <td class="py-4 pl-4 pr-8 sm:pl-6 lg:pl-8">
            <div class="flex items-center gap-x-4">
              <div class="truncate text-sm font-medium leading-6 text-white">{{instance.alias.as_deref().unwrap_or("-")}}</div>
            </div>
          </td>
          <td class="hidden py-4 pl-0 pr-4 text-right text-sm leading-6 text-gray-400 sm:table-cell sm:pr-6 lg:pr-8">
            <time datetime="2023-01-23T11:00">{{instance.brand}}</time>
          </td>
          <td class="hidden py-4 pl-0 pr-4 sm:table-cell sm:pr-8">
            <div class="flex gap-x-3">
              <div class="font-mono text-sm leading-6 text-gray-400">{{instance.image_uuid}}</div>
            </div>
          </td>
          <td class="hidden py-4 pl-0 pr-8 text-sm leading-6 text-gray-400 md:table-cell lg:pr-20">{{instance.max_physical_memory}}</td>
          <td class="hidden py-4 pl-0 pr-8 text-sm leading-6 text-gray-400 md:table-cell lg:pr-20">{{instance.quota}}</td>
          <td class="py-4 pl-0 pr-4 text-sm leading-6 sm:pr-8 lg:pr-20">
            <div class="flex items-center justify-end gap-x-2 sm:justify-start">
              {% if instance.state == "running" %}
              <div class="flex-none rounded-full p-1 text-green-400 bg-green-400/10">
                <div class="h-1.5 w-1.5 rounded-full bg-current"></div>
              </div>
              {% endif %}
              {% if instance.state == "provisioning" %}
              <div class="flex-none rounded-full p-1 text-yellow-400 bg-yellow-400/10">
                <div class="h-1.5 w-1.5 rounded-full bg-current"></div>
              </div>
              {% endif %}
              {% if instance.state == "stopped" %}
              <div class="flex-none rounded-full p-1 text-red-400 bg-red-400/10">
                <div class="h-1.5 w-1.5 rounded-full bg-current"></div>
              </div>
              {% endif %}
              {% if instance.state == "down" %}
              <div class="flex-none rounded-full p-1 text-black-400 bg-black-400/10">
                <div class="h-1.5 w-1.5 rounded-full bg-current"></div>
              </div>
              {% endif %}
              <div class="hidden text-white sm:block">{{instance.state|capitalize}}</div>
            </div>
          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}