{% extends "layout/main.j2" %}
{% block title %}Dashboard{% endblock %}
{% block body %}

{# Tailwind classes for the active navigation entry and inactive ones #}
{% let active = "bg-gray-800 text-white" %}
{% let inactive = "text-gray-400 hover:text-white hover:bg-gray-800" %}

<body class="h-full">
<div>
  <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
    <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-gray-900 px-6">
      <div class="flex h-16 shrink-0 items-center">
        {% include "include/svg/smartos.svg" %}
      </div>
      <nav class="flex flex-1 flex-col">
        <ul role="list" class="flex flex-1 flex-col gap-y-7">
          <li>
            <ul role="list" class="-mx-2 space-y-1" hx-sync="this:replace" hx-target="#main" hx-select="#content">
              <li>
                <!-- Current: "bg-gray-800 text-white", Default: "text-gray-400 hover:text-white hover:bg-gray-800" -->
                <a href="/dashboard"
                  hx-get="/dashboard"
                  class="{% if title == "Dashboard" %}{{active}}{% else %}{{inactive}}{% endif %} group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer main-nav">
                  {% include "include/svg/home.svg" %}
                  Dashboard
                </a>
              </li>
              <li>
                <a href="/instances"
                hx-get="/instances"
                class="{% if title == "Instances" %}{{active}}{% else %}{{inactive}}{% endif %} group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer main-nav">
                  {% include "include/svg/servers.svg" %}
                  Instances
                </a>
              </li>
              <li>
                <a href="/images"
                  hx-get="/images"
                  class="{% if title == "Images" %}{{active}}{% else %}{{inactive}}{% endif %} group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer main-nav">
                  {% include "include/svg/box.svg" %}
                  Images
                </a>
              </li>
            </ul>
          </li>
          <li class="mt-auto">
            <a href="/logout" class="text-white group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer hover:bg-gray-800">
              {% include "include/svg/logout.svg" %}
              Logout
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
  <main id="main" class="py-10 lg:pl-72">
      {% block content %}{% endblock %}
  </main>
</div>
<!-- Global notification live region, render this permanently at the end of the document -->
<div id="notify" aria-live="assertive" class="pointer-events-none fixed inset-0 flex items-end px-4 py-6 sm:items-start sm:p-6 opacity-0">
  <div class="flex w-full flex-col items-center space-y-4 sm:items-end">
    <!--
      Notification panel, dynamically insert this into the live region when it needs to be displayed

      Entering: "transform ease-out duration-300 transition"
        From: "translate-y-2 opacity-0 sm:translate-y-0 sm:translate-x-2"
        To: "translate-y-0 opacity-100 sm:translate-x-0"
      Leaving: "transition ease-in duration-100"
        From: "opacity-100"
        To: "opacity-0"
    -->
    <div class="pointer-events-auto w-full max-w-sm overflow-hidden rounded-lg bg-slate-800 shadow-lg ring-1 ring-black ring-opacity-5">
      <div class="p-4">
        <div class="flex items-start">
          <div id="notify-icons" class="flex-shrink-0">
            <svg id="notifiy-icon-ok" class="hidden h-6 w-6 text-green-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <svg id="notifiy-icon-error" class="hidden h-6 w-6 text-red-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9 3.75h.008v.008H12v-.008Z" />
            </svg>
            <svg id="notifiy-icon-info" class="hidden h-6 w-6 text-blue-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" d="m11.25 11.25.041-.02a.75.75 0 0 1 1.063.852l-.708 2.836a.75.75 0 0 0 1.063.853l.041-.021M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Zm-9-3.75h.008v.008H12V8.25Z" />
            </svg>
          </div>
          <div class="ml-3 w-0 flex-1 pt-0.5">
            <p id="notify-body" class="text-sm font-medium text-white"></p>
            <p id="notify-heading" class="mt-1 text-sm text-slate-500"></p>
          </div>
          <div class="ml-4 flex flex-shrink-0">
            <button id="notify-close" type="button" class=" cursor-pointer inline-flex rounded-md bg-slate-600 text-gray-400 hover:text-white focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              <span class="sr-only">Close</span>
              <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path d="M6.28 5.22a.75.75 0 00-1.06 1.06L8.94 10l-3.72 3.72a.75.75 0 101.06 1.06L10 11.06l3.72 3.72a.75.75 0 101.06-1.06L11.06 10l3.72-3.72a.75.75 0 00-1.06-1.06L10 8.94 6.28 5.22z" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</body>
{% endblock %}