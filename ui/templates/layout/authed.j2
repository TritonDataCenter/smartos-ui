{% extends "layout/main.j2" %}
{% block title %}Dashboard{% endblock %}
{% block body %}

{# Tailwind classes for the active navigation entry and inactive ones #}
{% let active = "bg-gray-800 text-white" %}
{% let inactive = "text-gray-400 hover:text-white hover:bg-gray-800" %}

<body class="h-full">
<div>
  <div class="hidden lg:fixed lg:inset-y-0 lg:z-50 lg:flex lg:w-72 lg:flex-col">
    <div class="flex grow flex-col gap-y-5 overflow-y-auto bg-gray-900 px-6">
      <div class="flex h-16 shrink-0 items-center">
        {% include "include/svg/smartos.svg" %}
      </div>
      <nav class="flex flex-1 flex-col">
        <ul role="list" class="flex flex-1 flex-col gap-y-7">
          <li>
            <ul role="list" class="-mx-2 space-y-1">
              <li>
                <!-- Current: "bg-gray-800 text-white", Default: "text-gray-400 hover:text-white hover:bg-gray-800" -->
                <a href="/dashboard"
                  hx-get="/dashboard"
                  hx-target="#main"
                  hx-select="#content"
                  class="{% if title == "Dashboard" %}{{active}}{% else %}{{inactive}}{% endif %} group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer main-nav">
                  {% include "include/svg/home.svg" %}
                  Dashboard
                </a>
              </li>
              <li>
                <a href="/instances"
                hx-get="/instances"
                hx-target="#main"
                hx-select="#content"
                class="{% if title == "Instances" %}{{active}}{% else %}{{inactive}}{% endif %} group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer main-nav">
                  {% include "include/svg/servers.svg" %}
                  Instances
                </a>
              </li>
              <li>
                <a href="/images"
                  hx-get="/images"
                  hx-target="#main"
                  hx-select="#content"
                  class="{% if title == "Images" %}{{active}}{% else %}{{inactive}}{% endif %} group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer main-nav">
                  {% include "include/svg/box.svg" %}
                  Images
                </a>
              </li>
            </ul>
          </li>
          <li class="mt-auto">
            <a href="/logout" class="text-white group flex gap-x-3 rounded-md p-2 text-sm leading-6 font-semibold cursor-pointer hover:bg-gray-800">
              {% include "include/svg/logout.svg" %}
              Logout
            </a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
  <main id="main" class="py-10 lg:pl-72">
      {% block content %}{% endblock %}
  </main>
</div>
</body>
{% endblock %}